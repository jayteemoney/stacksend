{
  "name": "stacksend",
  "version": "0.1.0",
  "description": "A peer-to-peer remittance dApp on Stacks blockchain with group contribution support",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "clarinet test",
    "test:coverage": "clarinet test --coverage",
    "test:watch": "clarinet test --watch",
    "check": "clarinet check",
    "type-check": "tsc --noEmit",
    "console": "clarinet console",
    "contracts:check": "clarinet check",
    "contracts:test": "clarinet test",
    "deploy:devnet": "clarinet integrate",
    "deploy:testnet": "clarinet deployment generate --testnet && clarinet deployment apply -p deployments/default.testnet-plan.yaml",
    "deploy:mainnet": "clarinet deployment generate --mainnet && clarinet deployment apply -p deployments/default.mainnet-plan.yaml",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "dev": "clarinet integrate",
    "build": "npm run type-check && npm run lint && npm run check && npm run test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,clar,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,clar,md,json}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "stacks",
    "clarity",
    "blockchain",
    "remittance",
    "dapp",
    "defi"
  ],
  "author": "jayteemoney",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.clar": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
